if !has('gui_running')
    finish
endif

"----------------------------------------------------------
"多重起動禁止
"----------------------------------------------------------
if has('gui_running') && argc()
    let s:running_vim_list = filter(
    \   split(serverlist(), '\n'),
    \   'v:val !=? v:servername')
    if !empty(s:running_vim_list)
        silent execute '!start gvim'
        \   '--servername' s:running_vim_list[0]
        \   '--remote-tab-silent' join(argv(), ' ')
        qa!
    endif
    unlet s:running_vim_list
endif

"----------------------------------------------------------
"カラースキーマの設定
"----------------------------------------------------------
colorscheme desert

"----------------------------------------------------------
"フォント設定
"----------------------------------------------------------
set guifont=MS_Gothic:h11

"----------------------------------------------------------
"タブページのラインを表示
"----------------------------------------------------------
set showtabline=2 

"----------------------------------------------------------
" ウインドウに関する設定:
"----------------------------------------------------------
"幅
set columns=120
"高さ
set lines=60

"----------------------------------------------------------
" バックアップファイルを生成しない
"----------------------------------------------------------
set nobackup
